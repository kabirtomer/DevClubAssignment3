<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kabir.counter.MainActivity">

    <RelativeLayout
        android:paddingTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbbbff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="Counts:"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:textColor="#261099"
            android:textSize="60sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/displayVal"
            android:layout_toRightOf="@id/counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="90sp"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/add"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/counts"
            android:background="#9699bb"
            android:fontFamily="casual"
            android:onClick="add"
            android:text="Add"
            android:textSize="30sp"

            />

        <Button
            android:layout_width="200dp"

            android:layout_height="80dp"
            android:layout_below="@id/counts"
            android:layout_toRightOf="@id/add"
            android:layout_toEndOf="@id/add"
            android:background="#9699bb"
            android:fontFamily="casual"
            android:onClick="subtract"
            android:text="Subtract"
            android:textSize="30sp"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#9699bb"
            android:fontFamily="casual"
            android:onClick="reset"
            android:text="reset"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@id/add"
            android:layout_marginLeft="150dp"

            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
